<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <p class="page-header centered"><strong>GiftKart</strong> Admin | Add Product</p>
    <form class="signup-form" action="/admin/add-product" method="POST">
      <% if (errorMessage) { %>
      <div class="user-message user-message--success"><%= errorMessage %></div>
      <% } %>

      <div class="form-control">
        <label for="title">Title</label>
        <input type="title" name="title" id="title" placeholder="Enter the name of your prouduct">
      </div>
      
      <div class="form-control">
        <label for="price">Price</label>
        <input type="number" name="price" id="price">
      </div>
      
      <div class="form-control">
        <label for="imageUrl">ImageUrl</label>
        <input type="imageUrl" name="imageUrl" id="imageUrl">
      </div>
      
      <div class="form-control">
        <label for="description">Description</label>
        <textarea type="description" name="description" id="description" rows="7"></textarea>
      </div>

      <div class="form-control">
        <label for="category">Category </label>
        <select id="category-select" name="category" id="category" required>
          <option value="card">Card</option>
          <option value="frame">Frame</option>
          <option value="others">Others</option>
        </select>
      </div>

      <div class="form-control">
        <label for="quantity">Quantity</label>
        <input type="number" name="quantity" id="quantity">
      </div>

      <div  class="form-control">
        <label for="minage">Minimum age</label>
        <select id="minage-select" name="minage" id="minage">
          <option value="1">1</option>
          <option value="10">10</option>
          <option value="20">20</option>
          <option value="30">30</option>
          <option value="40">40+</option>
        </select>
        Years
      </div>

      <div  class="form-control">
        <label for="maxage">Maximum age</label>
        <select id="maxage-select" name="maxage" id="maxage">
          <option value="10">10</option>
          <option value="20">20</option>
          <option value="30">30</option>
          <option value="40">40+</option>
        </select>
        Years
      </div>

      <div class="form-control">
        <label for="occasion">Occasion </label>
        <select id="occasion-select" name="occasion" required>
          <option value="marriage">Marriage</option>
          <option value="bithday">Bithday</option>
          <option value="other">Other</option>
        </select>
      </div>

      <div class="form-control">
        <label for="gender">Gender: </label>
        <select id="gender-select" name="gender">
          <option value="M">Male</option>
          <option value="F">Female</option>
          <option value="B">Both</option>
        </select>
      </div>

      <button class=" btn" type="submit">Submit</button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>