<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/product.css">
  <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <form class="login-form" action="/login" method="POST">
      <p class="login-form-header"><strong>GiftKart</strong> | Login</p>
      <% if (errorMessage) { %>
          <div class="user-message user-message--error"><%= errorMessage %></div>
      <% } %>
      <div class="form-control">
        <label for="email">Email</label>
        <input
          class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
          type="email"
          name="email"
          id="email"
          value="<%= oldInput.email %>">
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input
          class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
          type="password"
          name="password"
          id="password"
          value="<%= oldInput.password %>">
      </div>
      <button style="margin-bottom: 1rem;" class="btn" type="submit">Login</button>
      <div><a href="/reset">Reset Password</a></div>
    </form>
  </main>
<%- include('../includes/end.ejs') %>
